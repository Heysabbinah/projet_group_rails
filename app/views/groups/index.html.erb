
<div class="container">
<h1>Listing Groups</h1>

 <table class="table">
 <thead>
   <tr>
     <th>Name</th>
     <th>Salle</th>
     <th>Tache</th>
     <th>Membres</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @groups.each do |group| %>
   <tr>
     <td><%= group.name %></td>
     <td><%= group.salle %></td>
     <td><%= group.tache %></td>
     <td></td>
     <td><%= link_to 'Show', group, :class => "btnshow" %></td>
     <td><%= link_to '+', edit_group_path(group), :class => "btnedit" %></td>
    
   </tr>
   <% group.people.each do |person| %>
   <tr>
     <td></td>
     <td></td>
     <td></td>
     <td><%= person.name %>
     <%= person.sensei? ? " - Sensei" : "" %></td>
     <td></td>
     <td></td>
     <td></td>
   </tr>
     <% end %>
     <% end %>
   </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>
<%= link_to 'Random', dunno_path %> <!-- ici le btn random pr -->
</div>




<!--//////////////////////   ici la liste people /////////////////////////////// -->

<div class="container">

<h1>Listing People</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
     <!--  <th>Email</th>
      <th>Tel</th> -->
      <th>Group</th>
      <th>Sensei</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <% if person.group_id == nil %>
       <td><%= best_in_place person, :name %></td> <!-- ici la synthaxe de best in place pr le name -->

        <!-- <td><%= person.email %></td>
        <td><%= person.tel %></td>  -->
        <td><%= person.group_id %></td>
        <td><%= best_in_place person, :sensei, :as => :select, :collection => {"1" => "Sensei", "2" => "visiteur"} %> <!-- ici la synthaxe pr choisir le sensei -->

        <td><%= link_to 'Show', person, :class => "btnshow" %></td>
        <td><%= link_to '+', edit_person_path(person), :class => "btnedit" %></td>
      </tr>
         <%end%> <!-- ici le end pr la boucle qui affiche les user dans les groupe et les efface de la liste-->

    <% end %>
  </tbody>
</table>

<br>

</div>
</div>
