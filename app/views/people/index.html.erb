<p id="notice"><%= notice %></p>

<div class="container">
<%= link_to "Home", groups_path,  :class => "home"  %>
   <%= link_to "Editions des utilisateurs", people_path,  :class => "home"  %>
<h1>Listing People</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Tel</th>
      <th>Group</th>
      <th>Sensei</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.email %></td>
        <td><%= person.tel %></td>
        <td><%= person.group_id %></td>
        <td><%= person.sensei %></td>
        <td><%= link_to 'Show', person, {:class => "btnedition"} %></td>
        <td><%= link_to 'Edit', edit_person_path(person), {:class => "btnedit"} %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Person', new_person_path %>
</div>
